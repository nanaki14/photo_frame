{
	"name": "bun-react-template",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"main": "src/index.tsx",
	"module": "src/index.tsx",
	"scripts": {
		"dev": "concurrently \"bun run build:dev --watch\" \"bun --hot src/index.tsx\"",
		"build:dev": "bun run build.ts --outdir=src/dist --no-minify --source-map=inline",
		"start": "NODE_ENV=production bun src/index.tsx",
		"build": "bun run build.ts",
		"install-pi": "./install.sh",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"test-display": "cd display && python3 display_manager.py test",
		"check-status": "curl -s http://localhost:3000/api/status | jq .",
		"logs": "sudo journalctl -u photo-frame.service -f"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.0",
		"@hookform/resolvers": "^5.2.1",
		"@radix-ui/react-label": "^2.1.2",
		"@radix-ui/react-select": "^2.1.6",
		"@radix-ui/react-slot": "^1.1.2",
		"@tanstack/react-query": "^5.85.5",
		"@tanstack/react-query-devtools": "^5.85.5",
		"bun-plugin-tailwind": "^0.0.14",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"hono": "^4.9.4",
		"lucide-react": "^0.475.0",
		"react": "^19",
		"react-dom": "^19",
		"react-hook-form": "^7.62.0",
		"sharp": "^0.34.3",
		"tailwind-merge": "^3.0.1",
		"tailwindcss": "^4.0.6",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^4.1.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@types/bun": "latest",
		"@types/node": "^24.3.0",
		"@types/react": "^19.1.11",
		"@types/react-dom": "^19.1.7",
		"concurrently": "^9.2.1"
	}
}
